<%- include('partials/header', {title: 'April Wayne - Create New Post',
currentPage: 'blog'}) %>

<main class="main-content">
  <div class="content-container">
    <div class="create-post-container">
      <h1>Create New Blog Post</h1>
      <form action="/blog/submit" method="post" class="create-form">
        <div class="form-group">
          <label for="title">Title:</label>
          <input
            type="text"
            id="title"
            name="title"
            required
            placeholder="Enter post title"
          />
        </div>

        <div class="form-group">
          <label for="body">Body:</label>
          <textarea
            id="body"
            name="body"
            required
            placeholder="Write your post content here..."
          ></textarea>
        </div>

        <div class="form-group">
          <label for="date">Date:</label>
          <input
            type="date"
            id="date"
            name="date"
            required
            value="<%= new Date().toISOString().split('T')[0] %>"
          />
        </div>

        <div class="form-group">
          <label for="author">Author:</label>
          <input
            type="text"
            id="author"
            name="author"
            required
            value="April Wayne"
            placeholder="Enter author name"
          />
        </div>

        <div class="form-group">
          <label for="tags">Tags:</label>
          <input
            type="text"
            id="tags"
            name="tags"
            required
            placeholder="e.g., foodie, travel, lifestyle"
          />
          <small>Separate tags with commas</small>
        </div>

        <div class="form-group">
          <label for="comments">Comments (optional):</label>
          <textarea
            id="comments"
            name="comments"
            placeholder="Format: username: comment, username2: comment2"
          ></textarea>
          <small>Leave empty if no initial comments</small>
        </div>

        <div class="form-group">
          <label for="htmlContent">HTML Content:</label>
          <textarea
            id="htmlContent"
            name="htmlContent"
            required
            placeholder="Enter the HTML content for your post..."
          ></textarea>
          <small
            >Use HTML tags to format your content (e.g., &lt;h2&gt;, &lt;p&gt;,
            &lt;ul&gt;)</small
          >
        </div>

        <div class="form-actions">
          <button type="submit" class="btn-primary">Create Post</button>
          <a href="/blog" class="btn-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
